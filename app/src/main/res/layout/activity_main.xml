<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_alignParentBottom="true"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.feroz.randomnews.MainActivity"
    android:padding="0dp"
    android:id="@+id/RL1"
    android:clickable="false">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="false"
        android:visibility="visible"
        android:background="#000000">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center|center_horizontal"
            android:baselineAligned="false"
            android:weightSum="1"
            android:background="#535353"
            android:padding="20dp"
            android:alpha="5">

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/publishertext"
                android:layout_gravity="center_horizontal"
                android:background="#000000"
                android:padding="6dp"
                android:textStyle="bold|italic"
                android:textColor="#c5c3c3" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/titletxtview"
                android:layout_margin="0dp"
                android:textSize="19dp"
                android:typeface="serif"
                android:textStyle="bold|italic"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:background="#1e1d1d"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:padding="15dp"
                android:autoText="false" />

            <ImageView
                android:layout_width="280dp"
                android:layout_height="280dp"
                android:id="@+id/imageView"
                android:contentDescription="Sample Image"
                android:cropToPadding="false"
                android:background="#2b2a2a"
                android:padding="15dp" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/contenttxtview"
                android:textSize="18dp"
                android:textStyle="normal"
                android:typeface="serif"
                android:textColor="#ffffff"
                android:visibility="visible"
                android:enabled="false"
                android:clickable="false"
                android:layout_weight="3.19"
                android:background="#2b2a2a"
                android:textAlignment="center"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:padding="15dp" />

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/datetxt"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="69dp"
                android:textSize="14dp"
                android:layout_alignBottom="@+id/scrollView"
                android:layout_alignRight="@+id/scrollView"
                android:layout_alignEnd="@+id/scrollView"
                android:background="#000000"
                android:padding="6dp"
                android:textStyle="bold"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:weightSum="1"
        android:layout_gravity="bottom"
        android:gravity="center|fill_vertical|center_horizontal"
        android:layout_weight="10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#1b1a1a">

        <Button
            android:layout_width="125dp"
            android:layout_height="45dp"
            android:text="rAnDoM"
            android:id="@+id/reloadButton"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:bottomRightRadius="16dp"
            android:bottomLeftRadius="16dp"
            android:topLeftRadius="16dp"
            android:topRightRadius="16dp"
            android:layout_gravity="center_vertical"
            android:background="#2942d1"
            android:layout_marginRight="20dp" />

        <Button
            android:layout_width="130dp"
            android:layout_height="45dp"
            android:text="read more >"
            android:id="@+id/nextbutton"
            android:visibility="visible"
            android:background="#2942d1"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

</RelativeLayout>
